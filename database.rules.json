{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "projects": {
      ".indexOn": ["createdBy", "status", "createdAt"]
    },
    "tasks": {
      ".indexOn": ["projectId", "status", "assignedTo", "createdAt"]
    },
    "comments": {
      ".indexOn": ["taskId", "createdAt"]
    },
    "users": {
      ".indexOn": ["email"]
    },
    "risks": {
      ".indexOn": ["projectId"]
    },
    "lessons": {
      ".indexOn": ["projectId"]
    },
    "changeRequests": {
      ".indexOn": ["projectId"]
    }
  }
}
